# ====================================================================================================================

# class Parent():

#     def greeting(self):

#         print("Hello")

# class Child(Parent):

#     def meet(self):

#         print("Oi")

#     def greeting(self):

#         print("Iam called")

#         return super().greeting()        #does what exact statement in parent class

# obj = Child()

# obj.greeting()

# obj.meet()
# ====================================================================================================================

class Parent():

    def vehicle(self):

        print("Maruti")

class Child(Parent):

    def vehicle(self):

        print("Polo")

        return super().vehicle()
    
obj = Child()

obj.vehicle()
